		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		<meta
			name="description"
			content="Wanderfiles helps you organize all your travel documents and data in one place. Best Trip Planning App for your files."
		/>
		<meta
			property="og:title"
			content="Wanderfiles - Best Trip Planning App for your files. Wanderfiles helps you organize all your travel documents and data in one place"
		/>
		<meta
			property="og:description"
			content="Wanderfiles helps you organize and access all your travel documents in one place. Say goodbye to travel stress and looking for your trip files in your emails"
		/>
		<meta property="og:image" content={appScreenshot} />
		<meta property="og:url" content="https://wanderfiles.com" />
		<link
			href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&family=Roboto:wght@400;500&display=swap"
			rel="stylesheet"
		/>
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
		/>
		<title>{pageTitle}</title>
		<script type="application/ld+json">
			{
				"@context": "http://schema.org",
				"@type": "WebSite",
				"name": "Wanderfiles",
				"url": "https://wanderfiles.com",
				"potentialAction": {
					"@type": "SearchAction",
					"target": "https://wanderfiles.com/search?q={search_term_string}",
					"query-input": "required name=search_term_string"
				}
			}
		</script>
	</head>
	<body>
		<!-- Google Tag Manager (noscript) -->
		<noscript>
			<iframe
				src="https://www.googletagmanager.com/ns.html?id=GTM-KLD9K58K"
				height="0"
				width="0"
				style="display:none;visibility:hidden"></iframe>
		</noscript>
		<!-- End Google Tag Manager (noscript) -->
		<header class="main-header"></header>
		<section class="hero">
			<div class="hero-left container">
				<img
					src="/images/Wanderfiles-logo-color.png"
					alt="Logo"
					class="logo"
				/>
				<h1 class="hero-title">
					Plan Your Trip And Manage Your Files with Ease
				</h1>
				<p class="hero-subtitle">
					Wanderfiles helps you organize and access all your travel
					documents in one place.
					<br />
					Say goodbye to travel stress!
				</p>
				<button
					class="hero-button"
					onclick="document.getElementById('notify').scrollIntoView();"
					>Get Notified</button
				>
			</div>
			<div class="hero-right">
				<img
					src="images/wanderfiles-background.jpeg"
					alt="Wanderfiles. Manage your trip files in one place"
				/>
			</div>
		</section>
		<section id="features" class="features">
			<h2 class="features-title">Streamline Your Trip Plan</h2>
			<div class="cards">
				<div class="card">
					<div class="card-icon"><i class="fas fa-file-alt"></i></div>
					<h3 class="card-title">
						Travel Planning - Centralized Storage
					</h3>
					<p class="card-subtitle">
						Keep all your travel documents, itineraries, and
						reservations in one secure location.
					</p>
				</div>
				<div class="card">
					<div class="card-icon"><i class="fas fa-wifi"></i></div>
					<h3 class="card-title">Offline Access</h3>
					<p class="card-subtitle">
						Access your travel information anytime, even without an
						internet connection.
					</p>
				</div>
				<div class="card">
					<div class="card-icon">
						<i class="fas fa-mobile-alt"></i>
					</div>
					<h3 class="card-title">Free Travel Document Management</h3>
					<p class="card-subtitle">
						Organize and visualize all your travel data like
						flights, hotels and activities.
					</p>
				</div>
				<div class="card">
					<div class="card-icon"><i class="fas fa-palette"></i></div>
					<h3 class="card-title">
						Customizable Itineraries - Trip Planning App
					</h3>
					<p class="card-subtitle">
						Easily personalize your travel plans and share them with
						friends and family.
					</p>
				</div>
			</div>
		</section>
	</body>
	<section id="notify" class="form-container">
		<h2>Get Notified When the App is Live</h2>
		<form action="https://formspree.io/f/mjkbkyjo" method="POST">
			<input
				type="email"
				name="email"
				placeholder="Enter your email"
				required
			/>
			<button type="submit">Notify Me</button>
		</form>
	</section>
	<footer class="main-footer">
		<p>&copy; 2024 Wanderfiles. All rights reserved.</p>
	</footer>
</html>
