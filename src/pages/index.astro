			{
			  "@context": "http://schema.org",
			  "@type": "WebSite",
			  "name": "TripPlanIt",
			  "url": "https://yourwebsiteurl.com",
			  "potentialAction": {
				"@type": "SearchAction",
				"target": "https://yourwebsiteurl.com/search?q={search_term_string}",
				"query-input": "required name=search_term_string"
