		<!-- Google Tag Manager (noscript) -->
		<noscript>
			<iframe src="https://www.googletagmanager.com/ns.html?id=GTM-KLD9K58K" height="0" width="0" style="display:none;visibility:hidden"></iframe>
		</noscript>
		<!-- End Google Tag Manager (noscript) -->
		<header class="main-header">
			<div class="logo">
				<img src="/images/trip-plan-it-logo-black.png" alt="TripPlanIt Logo">
			</div>
		</header>
		<section class="hero">
			<div class="hero-overlay"></div>
			<div class="hero-content">
				<h1>TripPlanIt</h1>
				<p>Your personal travel assistant</p>
			</div>
			<div class="hero-image">
				<img src="/images/trip-plan-it-trip-manager.png" alt="TripPlanIt Screenshot">
			</div>
		</section>
			<section id="features" class="features">
			<h2>Key Features</h2>
			<ul>
				<li> Organize all travel documents in one place</li>
				<li> Easy access to hotel, flight, and activity information</li>
				<li> Seamless collaboration with travel companions</li>
				<li> Real-time updates and notifications</li>
			</ul>
		</section>
		<section id="notify" class="form-container">
			<h2>Get Notified When the App is Live</h2>
			<form   action="https://formspree.io/f/mjkbkyjo"			method="POST">
				<input type="email" name="email" placeholder="Enter your email" required>
				<button type="submit">Notify Me</button>
			</form>
		</section>
		<footer class="main-footer">
			<p>&copy; 2024 TripPlanIt. All rights reserved.</p>
		</footer>
	</html>
